generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id            Int    @id @default(autoincrement())
  name          String
  restaurantId  String // New field for restaurant ID

  @@unique([name, restaurantId]) // Categories must be unique per restaurant
}

model Otp {
  id        String   @id @default(uuid())
  otpCode   String
  clientId  String
  tableId   String?  // Optional for table-based OTPs
  mobileNum String?  // Optional for SMS-based OTPs
  createdAt DateTime @default(now())
  expiresAt DateTime
  verified  Boolean  @default(false)

  @@index([id])
  @@index([clientId])
  @@index([tableId])
  @@index([mobileNum])
}

model OtpAttempt {
  id        String   @id @default(uuid())
  clientId  String
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([clientId])
}
