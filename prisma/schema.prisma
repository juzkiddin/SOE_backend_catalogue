generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id           Int    @id @default(autoincrement())
  name         String
  restaurantId String
  iconName     String?

  @@unique([name, restaurantId])
}

model Otp {
  id        String   @id @default(uuid())
  otpCode   String
  createdAt DateTime @default(now())
  expiresAt DateTime
  verified  Boolean  @default(false)
  clientId  String
  tableId   String?
  mobileNum String?

  @@index([id])
  @@index([clientId])
  @@index([tableId])
  @@index([mobileNum])
}

model OtpAttempt {
  id        String   @id @default(uuid())
  clientId  String
  createdAt DateTime @default(now())
  ipAddress String?

  @@index([clientId])
}
